<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.douglasnickson.a15app_whatsappclone.activity.MainActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"
    />
    
    <com.douglasnickson.a15app_whatsappclone.helper.SlidingTabLayout
        android:id="@+id/st1_tabs"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager android:id="@+id/vp_pagina"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
