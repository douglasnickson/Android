<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    tools:context="com.douglasnickson.a15app_whatsappclone.activity.MainLoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="@dimen/altura_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/edit_login_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:ems="10"
        android:hint="Digite seu Email:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_login_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_login_email"
        android:layout_alignLeft="@+id/edit_login_email"
        android:layout_alignRight="@+id/edit_login_email"
        android:layout_alignStart="@+id/edit_login_email"
        android:layout_below="@+id/edit_login_email"
        android:ems="10"
        android:hint="Digite sua Senha:"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/bt_logar"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/edit_login_senha"
        android:layout_alignLeft="@+id/edit_login_senha"
        android:layout_alignStart="@+id/edit_login_senha"
        android:layout_alignRight="@+id/edit_login_senha"
        android:layout_alignEnd="@+id/edit_login_senha" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_logar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="fazCadastroUsuario"
        android:text="NÃ£o tem conta? Cadastre-se Agora!"
        android:textColor="@color/textColorPrimary" />
</RelativeLayout>
