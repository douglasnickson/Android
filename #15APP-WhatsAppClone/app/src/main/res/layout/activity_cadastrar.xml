<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.douglasnickson.a15app_whatsappclone.activity.CadastrarActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="@dimen/altura_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/edit_cadastro_nome"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:hint="Digite seu Nome:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_cadastro_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_cadastro_nome"
        android:layout_alignLeft="@+id/edit_cadastro_nome"
        android:layout_alignRight="@+id/edit_cadastro_nome"
        android:layout_alignStart="@+id/edit_cadastro_nome"
        android:layout_below="@+id/edit_cadastro_nome"
        android:ems="10"
        android:hint="Digite seu Email:"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_cadastro_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_cadastro_email"
        android:layout_alignLeft="@+id/edit_cadastro_email"
        android:layout_alignRight="@+id/edit_cadastro_email"
        android:layout_alignStart="@+id/edit_cadastro_email"
        android:layout_below="@+id/edit_cadastro_email"
        android:ems="10"
        android:hint="Digite sua Senha:"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_cadastro_senha"
        android:layout_alignLeft="@+id/edit_cadastro_senha"
        android:layout_alignRight="@+id/edit_cadastro_senha"
        android:layout_alignStart="@+id/edit_cadastro_senha"
        android:layout_below="@+id/edit_cadastro_senha"
        android:layout_marginTop="29dp"
        android:background="@color/colorPrimaryDark"
        android:text="Cadastrar" />

</RelativeLayout>
