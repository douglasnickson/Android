<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.douglasnickson.a15app_whatsappclone.activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="@dimen/altura_logo"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/nomeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_telefone"
        android:layout_alignLeft="@+id/edit_codPais"
        android:layout_alignRight="@+id/edit_telefone"
        android:layout_alignStart="@+id/edit_codPais"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Digite seu Nome:"
        android:inputType="textPersonName"
        android:textColor="@color/textColorPrimary"
        tools:layout_width="wrap_content" />

    <EditText
        android:id="@+id/edit_codPais"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeId"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:ems="10"
        android:hint="+55"
        android:inputType="number"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/edit_codArea"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_codPais"
        android:layout_alignBottom="@+id/edit_codPais"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:ems="10"
        android:hint="83"
        android:inputType="number"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/edit_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_codArea"
        android:layout_alignBottom="@+id/edit_codArea"
        android:layout_toEndOf="@+id/edit_codArea"
        android:layout_toRightOf="@+id/edit_codArea"
        android:ems="10"
        android:hint="99999-9999"
        android:inputType="number"
        android:textColor="@color/textColorPrimary" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_telefone"
        android:layout_alignLeft="@+id/edit_codPais"
        android:layout_alignRight="@+id/edit_telefone"
        android:layout_alignStart="@+id/edit_codPais"
        android:layout_below="@+id/edit_codPais"
        android:layout_marginTop="37dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/botao_cadastrar"
        android:textColor="@color/textColorPrimary" />
</RelativeLayout>
