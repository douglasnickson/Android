<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context="com.douglasnickson.somdosbichos.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/caoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/cao"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:id="@+id/gatoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gato"
        android:layout_alignTop="@+id/caoID"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:id="@+id/leaoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/leao"
        android:layout_below="@+id/caoID"
        android:layout_alignLeft="@+id/caoID"
        android:layout_alignStart="@+id/caoID" />

    <ImageView
        android:id="@+id/macacoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/macaco"
        android:layout_alignBottom="@+id/leaoID"
        android:layout_alignRight="@+id/gatoID"
        android:layout_alignEnd="@+id/gatoID" />

    <ImageView
        android:id="@+id/ovelhaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/ovelha"
        android:layout_below="@+id/macacoID"
        android:layout_alignLeft="@+id/leaoID"
        android:layout_alignStart="@+id/leaoID" />

    <ImageView
        android:id="@+id/vacaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ovelhaID"
        android:layout_alignEnd="@+id/macacoID"
        android:layout_alignRight="@+id/macacoID"
        app:srcCompat="@drawable/vaca" />
</RelativeLayout>
