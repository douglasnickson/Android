<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.douglasnickson.idadedegato.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/cat"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="361dp"
        android:layout_height="68dp"
        android:text="Digite a Idade do seu Gato, para saber a Idade dele em anos Humanos"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/textView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/caixa_idadeID"
        android:layout_width="207dp"
        android:layout_height="36dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/botaoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descobrir Idade"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/caixa_idadeID"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/resultado_textoID"
        android:layout_width="363dp"
        android:layout_height="36dp"
        android:layout_marginTop="58dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/botaoID"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
