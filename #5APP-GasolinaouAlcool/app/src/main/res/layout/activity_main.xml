<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94bd31"
    tools:context="com.douglasnickson.gasolinaoualcool.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço Álcool"
        android:textColor="#415c00"
        android:textSize="22sp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço Gasolina"
        android:textColor="#415C00"
        android:textSize="22sp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/valor_alcoolID"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/valor_gasolinaID"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/valor_gasolinaID"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/botao_ID"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:text="VERIFICAR"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/valor_alcoolID"
        tools:layout_editor_absoluteX="-42dp" />

    <TextView
        android:id="@+id/resultadoID"
        android:layout_width="355dp"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/botao_ID"
        tools:layout_editor_absoluteX="15dp" />
</android.support.constraint.ConstraintLayout>
